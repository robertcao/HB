<div id="wrapper">

  <%= render 'left_side_panel' %>
  <%= render 'top_nav_bar' %>

  <div id="page-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Create New Contact</h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
      <div class="col-md-10 ">
        <h4>Input Email and Name</h4>

        <form class="form-horizontal" method="get">
          <fieldset>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="Email" style="color: #ff0000">Email</label>
              <div class="col-md-4">
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-at"></i>
                  </div>
                  <input id="Email" name="email" type="text" placeholder="Email" class="form-control input-md">
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-4 control-label" for="Full Name" style="color: #ff0000">Full Name</label>
              <div class="col-md-2 col-xs-4" style="padding-right: 0">
                <input id="first_name" name="first_name" type="text" placeholder="First Name" class="form-control input-sm">
              </div>
              <div class="col-md-2 col-xs-4" style="padding-left: 0; padding-right: 0">
                <input id="middle_name" name="middle_name" type="text" placeholder="Middle Name" class="form-control input-sm">
              </div>
              <div class="col-md-2 col-xs-4" style="padding-left: 0; padding-right: 0">
                <input id="last_name" name="last_name" type="text" placeholder="Last Name" class="form-control input-sm">
              </div>
            </div>
          </fieldset>

          <div class="form-group">
            <label class="col-md-4 control-label" ></label>
            <div class="col-md-4">
              <input class="btn btn-danger" type="submit" value="Check Existing">
            </div>
          </div>
        </form>

        <h4>Check Result</h4>
        <h5><%= @add_msg %></h5>
        <%= render 'check_contact_result_list' %>
      </div>


    </div>

    <br>
    <br>
  </div>
</div>