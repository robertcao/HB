<div id="wrapper">

  <%= stylesheet_link_tag 'dataTables.bootstrap4.min' %>

  <%= render 'left_side_panel' %>
  <%= render 'top_nav_bar' %>

  <div id="page-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Portfolio</h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">

          <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
              <tr>
                <th>Name</th>
                <th>Fast Track</th>
                <th>Status</th>
                <th>Assign To</th>
                <th>Source Type</th>
                <th>Deal Stage</th>
                <th>Sector</th>
                <th>Valuation</th>
                <th>Region</th>
                <th>Contact</th>
                <th>Website</th>
                <th>Current Investors</th>
                <th>Created At</th>
              </tr>
              </thead>
              <tbody>
              <% @portfolio.each do |portf| %>
                  <tr>
                    <td><a href="/internal/portfolio_info?id=<%= portf.id %>"><%= portf.name %></a></td>
                    <td><%= portf.fast_track %></td>
                    <td><%= portf.status %></td>
                    <td><%= portf.assign_to %></td>
                    <td><%= portf.source_type %></td>
                    <td><%= portf.deal_stage %></td>
                    <td><%= portf.sector %></td>
                    <td><%= portf.valuation %></td>
                    <td><%= portf.region %></td>
                    <td><%= portf.contact %></td>
                    <td><%= portf.website %></td>
                    <td><%= portf.current_investors %></td>
                    <td><%= portf.created_at.to_date %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
            <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
    </div>

    <div class="well">
      <a class="btn btn-primary btn-md btn-block" target="_blank" href="/internal/deal_create">Create New Deal</a>
    </div>
  </div>
  <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

