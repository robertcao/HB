<style>
    input {
        border: 1px solid #bbb;
        width: 100%;
        margin-bottom: 15px;
        font-size: 18px;
        text-align: center;
    @include box_sizing;
    }

    input {
        height: 40px !important;
    }
</style>

<div class="container" style="position:absolute; width: 100%; height: 100%; background-position: center; background-repeat: no-repeat; background-image: url(https://i.pinimg.com/originals/bb/51/f7/bb51f7930bcd0c21b5e6de58ae2005a6.jpg);">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div style="margin-top: 100px;">
        <%= image_tag "hemi_brain_logo.png", :style => "max-width: 100%"%>
      </div>
      <div class="login-panel panel panel-default" style="margin-top: 40px">
        <div class="panel-heading" style="text-align: center">
          <h2>Welcome Back</h2>
        </div>
        <div class="panel-body">
          <br/>
          <%= form_for(:session, url: login_path) do |f| %>
              <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>

              <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>

              <%= f.submit "Login", class: "btn btn-lg btn-success btn-block" %>
          <% end %>
          <br/>
          <a href="/signup" class="btn btn-lg btn-primary btn-block">Sign Up</a>
        </div>
      </div>
    </div>
  </div>
</div>