<style>
    input, textarea, select {
        border: 1px solid #bbb;
        width: 100%;
        margin-bottom: 15px;
    @include box_sizing;
    }

    input {
        height: auto !important;
    }
</style>

<div class="container" style="position:absolute; width: 100%; height: 100%; background-position: center; background-repeat: no-repeat; background-image: url(https://i.pinimg.com/originals/bb/51/f7/bb51f7930bcd0c21b5e6de58ae2005a6.jpg);">
  <div class="row" style="margin: 50px 100px">
    <div class="col-md-6 col-md-offset-3">
      <div style="margin-top: 100px;">
        <img src="hemi_brain_logo.png" style="max-width: 100%;">
      </div>
      <div class="login-panel panel panel-default" style="margin-top: 40px">
        <div class="panel-heading" style="text-align: center">
          <h2>Sign up</h2>
        </div>
        <div class="panel-body">
          <%= form_for(@user, url: signup_path) do |f| %>
              <%= render 'shared/error_messages' %>

              <%= f.label :name, "Username" %>
              <%= f.text_field :name, class: 'form-control' %>

              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>

              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control', placeholder: "Minimum is 6 characters" %>

              <br/>

              <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>